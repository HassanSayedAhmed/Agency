@section scripts
{
    <script>
       $(document).ready(function () {

           var datatable = $('#reservationTable')
                .DataTable({
                    "processing": true,
                    "serverSide": true,
                    "scrollX": true,
                    "stateSave": false,
                    "lengthChange": false,
                    "dom": 'Bfrtip',

                    "buttons": ['copy', 'excel', 'pdf', 'print'],
                    "pageLength":10,
                    "rowId": 'id',
                    "ajax": {
                        "url": "/ReservationDetail/Index/@ViewBag.id",
                        "type": "POST",
                        "datatype": "json",
                        "dataSrc": "data"
                    },
                    "columns": [
                        {
                            "data": "id",
                            "searchable": true
                        },
                        {
                            "data": "amount", "searchable": true,
                            fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                                var html = "";
                                if (oData.amount)
                                    html += "<span style='font-weight:bold;' class='bold'>Amount:</span>" + addCommas(oData.amount.toFixed(2));
                                if (oData.currency) {
                                    html += "<span style='font-weight:bold;' class='bold'>";
                                    if (oData.currency == 1)
                                        html += " USD";
                                    if (oData.currency == 2)
                                        html += " GBP";
                                    if (oData.currency == 3)
                                        html += " EUR";
                                    html += "</span>";
                                }
                                html += "<br/>";
                                if (oData.tax)
                                    html += "<span style='font-weight:bold;' class='bold'>Tax:</span>" + addCommas(oData.tax.toFixed(2)) + "<br/>";

                                $(nTd).html("<span class='action-column'>" + html + "</span>");
                            }
                        },
                        {
                            "data": "no_of_days", "searchable": true,
                            fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
